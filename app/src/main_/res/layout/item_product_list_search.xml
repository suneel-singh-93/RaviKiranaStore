<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_20"
        android:paddingTop="@dimen/dp_10">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_16"
            android:paddingTop="@dimen/dp_16">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_2"
        android:layout_marginBottom="@dimen/dp_5"
        android:padding="@dimen/dp_5"
        android:paddingVertical="@dimen/dp_5"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/productCode"
                style="@style/font_18_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_8"
                android:text="300"
                app:layout_constraintBottom_toTopOf="@+id/txCode"
                app:layout_constraintStart_toStartOf="parent"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txCode"
                style="@style/medium_blue_14_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_8"
                android:text="Code"
                android:typeface="monospace"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/productCode"
                app:layout_constraintStart_toEndOf="@+id/productCode"
                app:layout_constraintStart_toStartOf="parent"
                />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/productName"
                style="@style/font_18_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_8"
                android:text="Suger"
                app:layout_constraintStart_toEndOf="@+id/productCode"
                app:layout_constraintTop_toTopOf="parent"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/productUnit"
                style="@style/font_18_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_12"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_8"
                android:text="Kg = "
                app:layout_constraintStart_toEndOf="@+id/productName"
                app:layout_constraintTop_toTopOf="parent"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/productPrice"
                style="@style/font_18_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_2"
                android:text="44 Rs/Kg"
                app:layout_constraintStart_toEndOf="@+id/productUnit"
                app:layout_constraintTop_toTopOf="parent"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txUpdate"
                style="@style/font_14_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginEnd="@dimen/dp_12"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_8"
                android:text="Last Update"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productUnit"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/proUpdateDate"
                style="@style/font_11_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginEnd="@dimen/dp_12"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_8"
                android:text="12/Aug/2023"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txUpdate"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/proUpdateTime"
                style="@style/font_10_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_12"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_8"
                android:text="Monday 02:30 Pm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/proUpdateDate"

                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/productMoreDetails"
                style="@style/semi_b_16_whit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/blue_primary"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_8"
                android:paddingVertical="@dimen/dp_8"
                android:text="More Details"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/productCode"
                app:layout_constraintTop_toBottomOf="@+id/productName"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/productImage"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_marginStart="-11dp"
            android:src="@drawable/default_img"
            app:srcCompat="@drawable/default_img"
            />
    </RelativeLayout>
</layout>